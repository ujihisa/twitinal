#!/usr/bin/env ruby192
# encoding: utf-8
require 'rubygems'
$: << File.basename(__FILE__)
require 'lib/twitinal'

def s(o); puts o; system o; end

log = Rubytter.new.user_timeline('ujm').map(&:text)
loop do
  diff = Rubytter.new.user_timeline('ujm').map(&:text) - log
  diff.each do |cmd|
    s cmd
  end
  sleep 30
end
